<UserControl x:Class="ProtonVPN.Client.UI.Dialogs.Upsell.P2PDetectionShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:ProtonVPN.Client.UI.Dialogs.Upsell"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid RowSpacing="32">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              VerticalAlignment="Center"
              ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0"
                   Width="320"
                   Source="{StaticResource P2PUpsellLargeIllustrationSource}" />

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Spacing="8">
                <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}"
                           Text="{x:Bind ViewModel.Localizer.Get('Dialogs_P2PDetection_Title')}" />
                <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextWeakColorBrush}"
                           Text="{x:Bind ViewModel.Localizer.Get('Dialogs_P2PDetection_Description')}" />
            </StackPanel>
        </Grid>

        <Button Grid.Row="1"
                HorizontalAlignment="Center"
                AutomationProperties.AutomationId="UpsellUpgradeButton"
                Command="{x:Bind ViewModel.UpgradeCommand}"
                Content="{x:Bind ViewModel.Localizer.Get('Common_Actions_Upgrade')}"
                Style="{StaticResource LargePrimaryButtonStyle}" />

    </Grid>
</UserControl>